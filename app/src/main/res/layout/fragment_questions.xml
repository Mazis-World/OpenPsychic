<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RecyclerView for the list of questions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/questionsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_above="@+id/questionsLeftView" />

    <!-- View showing how many questions the user has left -->
    <TextView
        android:id="@+id/questionsLeftView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/op_purple_accent"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:text="You have X questions left"
        android:textAlignment="center" />

</RelativeLayout>
