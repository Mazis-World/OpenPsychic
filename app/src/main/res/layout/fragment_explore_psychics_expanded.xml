<!-- expanded_card_item_layout.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/op_purple"
    android:backgroundTint="@color/op_purple">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/op_purple"
        android:elevation="4dp"
        android:radius="8dp"
        app:cardCornerRadius="6dp"
        app:layout_gravity="center|center_horizontal|center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/op_purple_accent"
            android:orientation="vertical">

            <!-- Background Image -->
            <ImageView
                android:id="@+id/expandedBackgroundImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/op_logo" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/op_purple_accent"
                app:cardCornerRadius="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/op_purple"
                        android:backgroundTint="@color/op_purple"
                        app:cardCornerRadius="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/sincedatetextview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0000"
                                    android:textAlignment="center"
                                    android:textColor="@color/op_purple_foreground_text" />

                                <TextView
                                    android:id="@+id/textView18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Since"
                                    android:textAlignment="center"
                                    android:textColor="@color/op_purple_foreground_text"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/requestsnumtextview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textAlignment="center"
                                    android:textColor="@color/op_purple_foreground_text" />

                                <TextView
                                    android:id="@+id/textView21"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Request"
                                    android:textAlignment="center"
                                    android:textColor="@color/op_purple_foreground_text"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/ratingnumtextview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="0.0"
                                    android:textColor="@color/op_purple_foreground_text" />

                                <TextView
                                    android:id="@+id/textView23"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Rating"
                                    android:textColor="@color/op_purple_foreground_text"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/expandedDisplayNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textColor="@color/op_purple"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/expandedUsernameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textColor="@color/op_purple_foreground_accent"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/expandedBioTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer nec odio. Praesent libero."
                                android:textColor="@android:color/black"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/op_purple_foreground_accent"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/requestreadingbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/op_purple"
                    android:gravity="center|center_horizontal"
                    android:text="Request Text Reading"
                    android:textColor="@color/op_purple_foreground_text" />

                <Button
                    android:id="@+id/sendprivatemessagebtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/op_purple"
                    android:gravity="center|center_horizontal"
                    android:text="Send Private Message"
                    android:textColor="@color/op_purple_foreground_text" />

                <Button
                    android:id="@+id/startvoicethread"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/op_purple"
                    android:gravity="center|center_horizontal"
                    android:text="Start Voice Thread"
                    android:textColor="@color/op_purple_foreground_text"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/op_purple" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/op_purple_foreground_accent"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- Divider -->


                <!-- Placeholder TextView -->
                <TextView
                    android:id="@+id/noReviewsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Give this psychic advisor a review."
                    android:textColor="@color/op_grey"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <!-- RecyclerView for Reviews -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reviewsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginTop="-8dp"
            android:layout_marginRight="-70dp">

            <RatingBar
                android:id="@+id/explorepsychicexpandedsratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="@color/op_gold"
                android:rating="3.5"
                android:scaleX=".3"
                android:scaleY=".3"
                android:stepSize="0.5" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/text_view_leave_a_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave A Review"
                android:textColor="@color/op_purple_foreground_text"
                android:textSize="16sp"
                android:textStyle="bold">

            </TextView>
        </FrameLayout>

        <!-- Bio -->
    </androidx.cardview.widget.CardView>
</ScrollView>

