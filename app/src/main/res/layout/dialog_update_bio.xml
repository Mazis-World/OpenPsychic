<!-- bio_dialog.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#00FFFFFF"
    android:elevation="8dp"
    app:cardBackgroundColor="@color/op_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biography "
            android:textColor="@color/op_purple_foreground_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/bioEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#00FFFFFF"
            android:gravity="top"
            android:hint="Say what you need to say."
            android:inputType="textMultiLine"
            android:minLines="5"
            android:textColor="@color/op_purple_foreground_text"
            android:textColorHint="@color/op_purple_foreground_text"
            android:textCursorDrawable="@color/op_gold" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00ECC3FF"
            android:text="Update"
            android:textColor="@color/op_purple_foreground_text" />
    </LinearLayout>

</androidx.cardview.widget.CardView>