<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OpenPsychic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/theme_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/op_gold</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/op_purple_foreground_text</item>
        <!-- Used for the background -->
        <item name="android:background">@color/op_purple</item>
        <item name="android:buttonBarPositiveButtonStyle">
            @style/AlertDialogCustomPositiveButtonStyle
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/AlertDialogCustomNegativeButtonStyle
        </item>
    </style>

    <style name="AlertDialogCustomPositiveButtonStyle" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:textColor">@color/op_red</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="AlertDialogCustomNegativeButtonStyle" parent="ThemeOverlay.Material3.Button.TextButton">
        <item name="android:textColor">@color/op_gold</item>
        <item name="android:background">#00FFFFFF</item>
    </style>


    <style name="Theme.OpenPsychic.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OpenPsychic.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OpenPsychic.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Base application theme. -->
    <style name="Base.Theme.OpenPsychic" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>